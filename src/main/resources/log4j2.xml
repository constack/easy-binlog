<?xml version="1.0" encoding="UTF-8"?>
<!--设置log4j2的自身log级别为warn -->
<configuration status="warn">
	<appenders>
		<console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %m%n" />
		</console>

		<RollingRandomAccessFile name="asynLogger"
			fileName="./logs/easy-binlog.log" filePattern="./logs/easy-binlog-%d{yyyy-MM-dd}.log.%i">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %L::: %-5p %C - %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="50MB" />
			</Policies>
			<DefaultRolloverStrategy max="100" />
		</RollingRandomAccessFile>

	</appenders>

	<loggers>
		<AsyncLogger name="zh.binlog" level="info" additivity="false"
			includeLocation="true">
			<AppenderRef ref="asynLogger" />
			<AppenderRef ref="Console" />
		</AsyncLogger>
		<AsyncRoot level="info" includeLocation="true">
			<AppenderRef ref="asynLogger" />
			<AppenderRef ref="Console" />
		</AsyncRoot>
	</loggers>

</configuration>